{
  "bot": {
    "token": "YOUR_BOT_TOKEN",
    "clientId": "YOUR_CLIENT_ID",
    "guildId": "YOUR_GUILD_ID",
    "enableUI": true,
    "uiPort": 3000,
    "uiAuth": {
      "enabled": false,
      "clientSecret": "your_discord_client_secret_here",
      "sessionSecret": "your_session_secret_here",
      "allowedRoleIds": [
        "ADMIN_ROLE_ID_1",
        "ADMIN_ROLE_ID_2"
      ],
      "redirectUri": "http://localhost:3000/auth/discord/callback"
    }
  },

  "plugins": {
    "verification": {
      "enabled": true,
      "channels": {
        "verifyChannelId": "ADMIN_VERIFICATION_CHANNEL_ID",
        "verifyCommandChannelId": "USER_COMMAND_CHANNEL_ID",
        "logChannelId": "LOG_CHANNEL_ID",
        "howToVerifyID": "INSTRUCTIONS_CHANNEL_ID"
      },
      "roles": {
        "verifiedRoleId": "VERIFIED_ROLE_ID",
        "verifierRoleIds": [
          "ADMIN_ROLE_ID_1", 
          "ADMIN_ROLE_ID_2"
        ]
      },
      "messages": {
        "approvalMessage": "✅ Thank you for verifying! You have been approved.",
        "denialMessagePrefix": "❌ Your verification has been denied."
      },
      "settings": {
        "debugMode": false,
        "screenshotCount": 2,
        "requireCharacterName": true,
        "requireGuildName": true
      }
    },

    "purge": {
      "enabled": false,
      "logging": {
        "channelId": "LOG_CHANNEL_ID"
      },
      "autoPurge": {
        "enabled": false,
        "schedules": [
          {
            "enabled": true,
            "name": "Daily cleanup",
            "channelIds": ["CHANNEL_TO_PURGE_ID", "ANOTHER_CHANNEL_ID"],
            "messageCount": 100,
            "frequency": "daily",
            "time": "00:00",
            "cron": "0 0 * * *",
            "timezone": "America/New_York"
          },
          {
            "enabled": false,
            "name": "Weekly multi-channel purge",
            "channelIds": ["CHANNEL_1_ID", "CHANNEL_2_ID", "CHANNEL_3_ID"],
            "messageCount": 0,
            "frequency": "weekly",
            "time": "02:00",
            "daysOfWeek": [0, 6],
            "cron": "0 2 * * 0,6",
            "timezone": "UTC"
          },
          {
            "enabled": false,
            "name": "Monthly full cleanup",
            "channelIds": ["MONTHLY_CHANNEL_ID"],
            "messageCount": 0,
            "frequency": "monthly",
            "time": "01:00",
            "dayOfMonth": 1,
            "cron": "0 1 1 * *",
            "timezone": "UTC"
          }
        ]
      }
    },

    "moderation": {
      "enabled": false,
      "logging": {
        "channelId": "MODERATION_LOG_CHANNEL_ID"
      },
      "roles": {
        "moderatorRoleIds": ["MODERATOR_ROLE_ID_1", "MODERATOR_ROLE_ID_2"]
      },
      "actions": {
        "timeout": true,
        "kick": true,
        "ban": true,
        "unban": true,
        "warn": true,
        "slowmode": true,
        "addrole": true,
        "removerole": true,
        "nickname": true,
        "purgemsg": true,
        "pin": true,
        "unpin": true,
        "userinfo": true,
        "serverstats": true
      },
      "exemptRoles": [],
      "exemptChannels": [],
      "autoModeration": {
        "enabled": false,
        "spam": {
          "enabled": true,
          "maxMessages": 5,
          "timeWindow": 10,
          "action": "timeout",
          "duration": 300,
          "exemptRoles": []
        },
        "caps": {
          "enabled": true,
          "threshold": 70,
          "minLength": 10,
          "action": "warn",
          "exemptRoles": []
        },
        "links": {
          "enabled": false,
          "whitelist": ["discord.gg", "youtube.com", "github.com"],
          "action": "delete",
          "exemptRoles": []
        },
        "profanity": {
          "enabled": false,
          "customWords": ["word1", "word2"],
          "action": "warn",
          "exemptRoles": []
        },
        "exemptRoles": ["MODERATOR_ROLE_ID", "TRUSTED_ROLE_ID"],
        "exemptChannels": ["EXEMPT_CHANNEL_ID"]
      }
    }
  }
}